kind: "BuildConfig"
apiVersion: "v1"
metadata:
  name: "sample-pipeline"
spec:
  strategy:
    jenkinsPipelineStrategy:
      jenkinsfile: |-
        node('master') {
          stage 'build'
          openshiftBuild(buildConfig: 'cotd', showBuildLogs: 'true')
          stage 'deploy'
          openshiftDeploy(deploymentConfig: 'cotd')
        }
